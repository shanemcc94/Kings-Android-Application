<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_menu"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/mainLogo" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/newGame"
        android:id="@+id/new_button"
        android:layout_gravity="bottom"

        android:maxWidth="60dp"
        android:minHeight="60dp"
        android:maxHeight="70dp"
        android:maxLength="70"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:text="@string/rules"
        android:id="@+id/rules_button"
        android:maxWidth="60dp"
        android:minHeight="60dp"
        android:maxHeight="60dp"
        android:maxLength="60"
        android:layout_below="@+id/new_button"
        android:layout_alignLeft="@+id/quit_button"
        android:layout_alignStart="@+id/quit_button"
        android:layout_alignRight="@+id/new_button"
        android:layout_alignEnd="@+id/new_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/quitGame"
        android:id="@+id/quit_button"
        android:maxHeight="60dp"
        android:maxLength="60"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:layout_below="@+id/rules_button"
        android:layout_alignLeft="@+id/new_button"
        android:layout_alignStart="@+id/new_button" />

</RelativeLayout><!-- From: file:/C:/Users/shane/Documents/Android%20Projects/Kings/app/src/main/res/layout/activity_main.xml -->